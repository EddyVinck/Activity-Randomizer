//- getFileFromManifest is passed down to the req.locals object
//- info: https://gist.github.com/joepie91/c0069ab0e0da40cc7b54b8c2203befe1#request-wide-locals
mixin js(file)
  script(src=`${getFileFromManifest(file)}` type='text/javascript')

mixin css(file)
  link(href=`${getFileFromManifest(file)}` rel='stylesheet')
