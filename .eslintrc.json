{
  "extends": 
    [
      "airbnb-base", 
      "prettier"
    ],
  "rules": {
    "linebreak-style": 0,
    "no-param-reassign": 0,
    "no-use-before-define": [
      "warn",
      {
        "functions": false,
        "classes": true,
        "variables": true
      }
    ]
  },
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "globals": {
    "gapi": true,
    "$": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  }
}